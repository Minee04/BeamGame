{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "process",
            "command": "${env:ProgramFiles}\\Microsoft Visual Studio\\2022\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe",
            "args": [
                "${workspaceFolder}\\BeamGame.sln",
                "/p:Configuration=Debug",
                "/t:Build",
                "/v:minimal",
                "/nologo"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run",
            "type": "process",
            "command": "${workspaceFolder}\\BeamGame\\bin\\Debug\\BeamGame.exe",
            "dependsOn": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "test",
            "type": "process",
            "command": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}\\BeamGame.Tests\\BeamGame.Tests.csproj",
                "--verbosity", "normal"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": "$msCompile",
            "dependsOn": "build"
        }
    ]
}
